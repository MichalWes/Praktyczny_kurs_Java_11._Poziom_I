<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %X{id} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="Michal" level="DEBUG"/>

    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>